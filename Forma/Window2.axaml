<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="500"
RequestedThemeVariant="Light"
		Width="400" Height="500"
        x:Class="Forma.Window2"
        Title="Window2">
		

	<Grid Background="#202020" ShowGridLines="True"  ColumnDefinitions=".1*, .9*, .1*" RowDefinitions="1*,2*,2*">

		<Border Width="800" Height="70"	Background="Gray"></Border>
		
		<TextBlock Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Foreground="White" Background="Gray" >/// Авторизация</TextBlock>

		<StackPanel Margin="20 60" Grid.Column="1" Grid.Row="1" Spacing="20">
			<TextBox Watermark="Email" Background="White"></TextBox>
			<TextBox Watermark="Password" Background="White"></TextBox>
		</StackPanel>



		<DockPanel Grid.Column="1" Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0 10">
			<Button Content="Sign in" FontSize="14" Click="Button_Click_1" Background="#e68722"></Button>
			<Button Content="Not registered?" Click="Button_Click_2" Background="Transparent" Foreground="Orange"></Button>
		</DockPanel>

		<StackPanel Grid.Column="1" Grid.Row="2" Spacing="20" Margin="20">

			<Image MaxHeight="100" Name="Ca1" IsVisible="False" Source="avares://Forma/Assets/ca1.jpeg"></Image>
			<Image MaxHeight="100" Name="Ca2" IsVisible="False" Source="avares://Forma/Assets/ca2.jpeg"></Image>
			<Image MaxHeight="100" Name="Ca3" IsVisible="False" Source="avares://Forma/Assets/ca3.jpeg"></Image>



			<TextBox Watermark="Captcha" Background="White"></TextBox>
			<StackPanel Orientation="Horizontal" Spacing="10">

				<Button Content="Проверить капчку"  Background="#e68722"></Button>
				<Button Background="#e68722" Click="Button_Click_3"  Content="Сменить капчу"></Button>
			</StackPanel>
		</StackPanel>
		
	</Grid>
	
	
	
</Window>
